<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
	<plugin-info>
		<description>${project.description}</description>
		<version>${project.version}</version>
		<vendor name="${project.organization.name}" url="${project.organization.url}" />
	</plugin-info>

	<taskType key="LabelExpirationTask" name="Label Expiration Task" class="com.trusolve.atlassian.bamboo.plugins.labelexpiration.task.LabelExpirationTask">
		<description>Perform setting and expiry of labels on builds.</description>
		<category name="builder" />
		<category name="deployment" />
		<configuration class="com.trusolve.atlassian.bamboo.plugins.labelexpiration.task.LabelExpirationTaskConfigurator" />
		<resource type="freemarker" name="edit" location="templates/buildProcessor/labelExpirationTaskEdit.ftl" />
		<resource type="freemarker" name="view" location="templates/buildProcessor/labelExpirationTaskView.ftl" />
		<resource type="download" name="icon" location="images/pluginLogo.png" />
	</taskType>
	<component-import key="transactionTemplate" name="Hibernate Transaction Template" interface="com.atlassian.sal.api.transaction.TransactionTemplate">
		<description>hibernate transaction</description>
	</component-import>
</atlassian-plugin>